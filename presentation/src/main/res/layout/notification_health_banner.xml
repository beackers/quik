<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <dev.octoshrimpy.quik.common.widget.QkTextView
        android:id="@+id/notificationBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="16dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/notificationBannerMessage"
        app:layout_constraintEnd_toStartOf="@id/notificationBannerButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:textSize="primary"
        tools:text="Notifications are off" />

    <dev.octoshrimpy.quik.common.widget.QkTextView
        android:id="@+id/notificationBannerMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingBottom="16dp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notificationBannerButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:textSize="secondary"
        tools:text="Turn on notifications for message alerts." />

    <dev.octoshrimpy.quik.common.widget.QkTextView
        android:id="@+id/notificationBannerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:textAllCaps="true"
        android:textColor="@color/tools_theme"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/notificationBannerMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/notificationBannerTitle"
        app:textColor="theme"
        app:textSize="secondary"
        tools:text="Settings" />

</androidx.constraintlayout.widget.ConstraintLayout>
